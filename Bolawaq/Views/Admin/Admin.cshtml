
@model Bolawaq.Models.ViewModels.searchAdmin
@{
    
    ViewData["Title"] = "Admin";
}

<div class="d-flex align-items-center justify-content-center">
    <form asp-action="Admin" asp-controller="Admin" method="post">
        <div asp-validation-summary="All" class="pb-1" style="font-size:18px; font-family:Georgia, serif">
            <div class="pb-2">
                <label>Введите имя:</label>
                <input type="text" asp-for="AdminName" class="form-control" placeholder="name" required />
            </div>

            <div class="pb-0">
                <label>Введите пароль:</label>
                <input type="text" asp-for="AdminPass" class="form-control" placeholder="pass" required />
            </div>

        </div>

        <div class="row justify-content-center">
            <button class="justify-content-center btn btn-primary btn-sm" type="submit">login</button>
        </div>
    </form>
</div>